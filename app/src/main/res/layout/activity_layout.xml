<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:columnCount="3"
        android:orientation="horizontal"
        android:rowCount="6"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/textview_border_blue"
            android:gravity="center"
            android:text="作业"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorBlue"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:layout_columnSpan="2"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:text="完成Lab2"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="left|bottom"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="0dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/line"
            android:layout_columnSpan="3"
            android:scaleType="fitXY">
        </ImageView>
        <TextView
            android:id="@+id/publishedTime"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_columnSpan="3"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:textColor="#52503A"
            android:textSize="18sp"
            android:text="发布时间："/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/line"
            android:layout_columnSpan="3"
            android:scaleType="fitXY">
        </ImageView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="275dp"
            android:layout_columnSpan="3"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/question_border">

            <ScrollView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="活动内容"
                    android:textSize="18sp" />
            </ScrollView>
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="0dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/line"
            android:layout_columnSpan="3"
            android:scaleType="fitXY">
        </ImageView>
        <TextView
            android:id="@+id/DDLTime"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_columnSpan="3"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:text="截止时间："
            android:textColor="#E05D54"
            android:textSize="18sp" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@drawable/line"
            android:layout_columnSpan="3"
            android:scaleType="fitXY">

        </ImageView>

        <GridLayout
            android:id="@+id/team"
            android:background="@android:color/background_light"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_columnSpan="3"
            android:columnCount="3"
            android:orientation="horizontal"
            android:rowCount="6"
            tools:ignore="MissingConstraints">



            <TextView
                android:id="@+id/teamMembers"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_columnSpan="1"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="队伍人数："
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/memberNumberNow"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_columnSpan="1"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="2"
                android:textColor="#03A9F4"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/memberNumber"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_columnSpan="1"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="/5"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnSpan="3"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/members"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="2"
                    android:layout_marginLeft="15dp"
                    android:orientation="vertical"></LinearLayout>

                <Button
                    android:id="@+id/addMember"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_columnSpan="1"
                    android:scaleType="centerCrop"
                    android:background= "@drawable/add" />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/line"
                android:layout_columnSpan="3"
                android:scaleType="fitXY">
            </ImageView>
        </GridLayout>


        <LinearLayout
            android:id="@+id/downloadFileLayout"
            android:background="@android:color/background_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnSpan="3"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_columnSpan="1"
                android:layout_gravity="bottom"
                android:gravity=""
                android:text="附件："
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/filename"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_columnSpan="1"
                android:layout_gravity="bottom"
                android:text="实验指导书"
                android:textColor="#009688"
                android:textStyle="italic" />

            <Button
                android:id="@+id/downloadFile"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:layout_columnSpan="1"
                android:layout_gravity="bottom"
                android:scaleType="centerCrop"
                android:background= "@drawable/download" />

        </LinearLayout>

        <GridLayout
            android:id="@+id/uploadFileLayout"
            android:background="@android:color/background_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnSpan="3"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:columnCount="4">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="0dp"
                android:paddingRight="10dp"
                android:src="@drawable/line"
                android:layout_columnSpan="4"
                android:scaleType="fitXY">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_columnSpan="1"
                android:layout_gravity="bottom"
                android:gravity=""
                android:text="文件："
                android:textSize="18sp"
                android:textStyle="bold">

            </TextView>
            <EditText
                android:id="@+id/filenameToUpload"
                android:layout_width="230dp"
                android:layout_height="40dp"
                android:layout_columnSpan="1"
                android:layout_marginRight="10dp"></EditText>

            <Button
                android:id="@+id/addFile"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_columnSpan="1"
                android:layout_gravity="bottom"
                android:scaleType="centerCrop"
                android:background="@drawable/add" />

            <Button
                android:id="@+id/upload"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_columnSpan="1"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button"
                android:text="提交"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/uploadFilesName"
                android:layout_width="369dp"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_columnSpan="4"></LinearLayout>
        </GridLayout>

    </GridLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>